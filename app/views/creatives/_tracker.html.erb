<header>
    <div class="tracker-content" id="tracker">
        <div class="tracker-content-inner">
            <h1>Track where you've been</h1>
            <hr>
            <p>Check the locations you've visited to see where you stack up against other we workers!</p>
            <%# <a href="#tracker" class="btn btn-primary btn-xl page-scroll">Tracker</a> %>
        </div>


<section class="no-padding" id="portfolio">
    <div class="container-fluid">
        <div class="row no-gutter">
            
          <% @locations.each do |location| %>

            <div class="col-lg-4">
                <a href="#" class="portfolio-box">
                    <%= image_tag "#{location.name}.jpg", class: "img-responsive", alt: "" %>
                    <div class="portfolio-box-caption">
                        
                        <div class="portfolio-box-caption-content">
                            <div class="project-category text-faded">
                                
                            </div>
                            <div class="project-name">
                                <%= location.name %>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
          <% end %>

        </div>
    </div>
</section>




    </div>
</header>

